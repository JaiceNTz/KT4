<Page x:Class="EIOS.AppPage.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EIOS.AppPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="530" Margin="23,24,0,0">
            <TextBlock Text="Логин:" FontFamily="Comic Sans MS" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtUsername" Width="334" Height="30" Margin="0,5" HorizontalAlignment="Left"/>
            <TextBlock Text="Пароль:" FontFamily="Comic Sans MS" HorizontalAlignment="Left"/>
            <PasswordBox x:Name="txtPassword" Width="334" Height="30" Margin="0,5" HorizontalAlignment="Left"/>
            <Button Content="Войти" Click="Login_Click" Width="119" Height="30" Margin="0,10" FontFamily="Comic Sans MS" Cursor="Hand" Background="#FFF2C304" HorizontalAlignment="Left"></Button>
            <Button Content="Зарегистрироваться" Width="166" Height="30" Margin="0,5" Click="Registr" FontFamily="Comic Sans MS" Cursor="Hand" HorizontalAlignment="Left"></Button>
            <TextBlock x:Name="lblMessage" Foreground="Red" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
